    <changeSet id="Adding_directors_and_films" author="stas.shilovich@gmail.com">
        <createTable tableName="director">
            <column autoIncrement="true" name="id" type="SERIAL">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="first_name" type="VARCHAR(20)"/>
            <column name="last_name" type="VARCHAR(40)"/>
            <column name="birth_date" type="DATE"/>
            <column name="deleted" type="BOOLEAN"/>
        </createTable>
        <createTable tableName="film">
            <column autoIncrement="true" name="id" type="SERIAL">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="director_id" type="INT">
                <constraints nullable="false" foreignKeyName="film_director" references="director(id)"/>
            </column>
            <column name="name" type="VARCHAR(100)"/>
            <column name="release_date" type="DATE"/>
            <column name="genre" type="VARCHAR(50)"/>
            <column name="deleted" type="BOOLEAN"/>
        </createTable>
